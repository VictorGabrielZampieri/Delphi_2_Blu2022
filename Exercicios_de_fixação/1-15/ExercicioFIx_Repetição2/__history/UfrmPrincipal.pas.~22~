unit UfrmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TEnumComando = (opFor, opWhile, opRepeat);

  TfrmPrincipal = class(TForm)
    edtN1: TEdit;
    edtN2: TEdit;
    Label1: TLabel;
    rgComandos: TRadioGroup;
    btnExecutar: TButton;
    procedure btnExecutarClick(Sender: TObject);
  private
    { Private declarations }
    procedure Mensagens(xCase : TEnumComando; xResultado : Integer);

    function AtingirMeta: Integer;
    function SaqueDeCaixa: Integer;
    function SomarPares: Integer;
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

function TfrmPrincipal.SomarPares;
var
  I, xNumero1, xNumero2 , xConta, xResultado: Integer;
begin
  xNumero1 := StrToInt(edtN1.Text);
  xNumero2 := StrToInt(edtN2.Text);
  xConta   := 0;

    for I := 0 to xNumero2 -1   do
    begin

         if (xNumero1 mod 2 = 0) then
         begin
         xConta := xConta  + xNumero1;

         end;

         xNumero1 := xNumero1 + 1;
    end;
    Result := xConta;
end;

 function TfrmPrincipal.SaqueDeCaixa;
 var
   xNumero1, xNumero2 , xConta, xResultado: Integer;
 begin
  xNumero1 := StrToInt(edtN1.Text);
  xNumero2 := StrToInt(edtN2.Text);
  xConta   := 0;

      while (xNumero1 > 0) do
    begin

      xNumero1 := xNumero1 - xNumero2;

      xConta := xConta + 1;
    end;
    Result := xConta;

 end;

 function TfrmPrincipal.AtingirMeta;
var
  xSangria,  xNumero1, xNumero2 , xConta, xResultado: Integer;
 begin
  xNumero1 := StrToInt(edtN1.Text);
  xNumero2 := StrToInt(edtN2.Text);
  xConta   := 0;
  xSangria := 0;

     repeat

      xSangria := xSangria + xNumero2;

      xConta := xConta + 1;

    until (xSangria >= xNumero1);

    result := xConta;
 end;

 procedure TfrmPrincipal.Mensagens(xCase : TEnumComando; xResultado : Integer);
 begin
   case xCase of

     opFor:
     begin
        ShowMessage(xResultado.ToString);
     end;

     opWhile:
     begin

     if (xResultado > 1) then
      ShowMessage('Seu saldo acabará em ' + xResultado.ToString + ' dias')
     else
      ShowMessage('Seu saldo acabará em ' + xResultado.ToString + ' dia');
     end;

     opRepeat:
     begin

     if (xResultado > 1) then
      begin
       ShowMessage('Você atingirá sua meta em ' + xResultado.ToString + ' dias');
      end

      else
      begin
       ShowMessage('Você atingirá sua meta em ' + xResultado.ToString + ' dia');
      end;
     end;
   end;
 end;


procedure TfrmPrincipal.btnExecutarClick(Sender: TObject);
var
   xNumero1, xNumero2 , xConta, xResultado: Integer;

begin
   xNumero1 := StrToInt(edtN1.Text);
   xNumero2 := StrToInt(edtN2.Text);
   xConta   := 0;


  case TEnumComando(rgComandos.ItemIndex) of

   opFor:
    begin

    if (xNumero1 < xNumero2) then
      begin
          xResultado := Self.SomarPares;
          Self.Mensagens(opFor, xResultado);
      end

     else
     ShowMessage('O valor informado é invalido comparado a base');
    end;

    opWhile:
    begin

    if (xNumero1 <= 0) or (xNumero1 < xNumero2) then
      begin
     ShowMessage('Saldo insuficiente para essa aplicação!');
      end

    else
      begin

      xResultado := Self.SaqueDeCaixa;

      Self.Mensagens(opWhile, xResultado);
      end;
    end;

    opRepeat:
    begin

    if (xNumero1 > 0) then
    begin

      xResultado := Self.AtingirMeta;
      Self.Mensagens(opRepeat, xResultado);
      end

      else
       ShowMessage('Valor inválido');
    end;

    else
    begin
      ShowMessage('Selecione uma opção!');
    end;
  end;
end;


end.

